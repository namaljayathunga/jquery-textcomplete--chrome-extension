{
    "name": "jQuery-textcomplete Chrome Extension",
    "version": "0.1",
    "icons": { 
        "16": "/img/icons/icon_16.png",
        "48": "/img/icons/icon_48.png",
        "128": "/img/icons/icon_128.png" 
    },

    "description": "Real Time Singlish Keyboard for Anywhere!",
    "permissions": [

    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
		    "css": ["/css/jquery.textcomplete.css"],
            "js": [
                    "/js/jquery-2.1.3.js", 
				    "/js/jquery.textcomplete.js",
                    "/js/content_script.js"
                ]
        }
    ],

    "manifest_version": 2
}
